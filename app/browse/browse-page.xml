<Page
    navigatingTo="onNavigatingTo"
    xmlns:modal="nativescript-windowed-modal"
    xmlns="http://schemas.nativescript.org/tns.xsd" xmlns:modal="nativescript-windowed-modal"
    >
    <ActionBar>
        <!--
        Use the NavigationButton as a side-drawer button in Android
        because ActionItems are shown on the right side of the ActionBar
        -->
        <NavigationButton ios:visibility="visible" android:visibility="visible" tap="onDrawerButtonTap">
            <Label class="fas" text="&#xf0c9;"></Label>
        </NavigationButton>
        <!--
        Use the ActionItem for IOS with position set to left. Using the
        NavigationButton as a side-drawer button in iOS is not possible,
        because its function is to always navigate back in the application.
        -->
        <ActionItem
            android:visibility="visible"
            tap="onInfoTap"
            ios.position="right"
            android.position="actionBar"
            >
            <Label class="fas fa-3x" text="&#xf05a;" style="color: white;  font-size: 20%; padding-right: 40px" id="manuinfo" data-atrr="test" atrr="test"></Label>
        </ActionItem>
        <ActionItem
            android:visibility="visible"
            tap="onInboxTap"
            ios.position="right"
            >
            <Label class="fas fa-3x" text="&#xf01c;" style="color: white;  font-size: 20%; padding-right: 40px" id="manuinbox"></Label>
        </ActionItem>
        <ActionItem
            android:visibility="visible"
            tap="onDrawerButtonTap"
            ios.position="right">
            <Label class="fas  fa-3x" text="&#xf0c9;" style="color: white; font-size: 20%"></Label>
        </ActionItem>
        <!-- <Label style="color: white" text="AdvocatusMob - Naslovna"></Label> -->
        <StackLayout orientation="horizontal"
            ios:horizontalAlignment="center"
            android:horizontalAlignment="center"
            id="staction"
            >
            <Image src="~/img/logo.png" class="action-image" width="50" height="50" ios:style="margin-top: -50px" id="logoHome"></Image>
            <Label text="" class="action-label h2" color="white" ios:style="margin-top: -40px"></Label>
        </StackLayout>
    </ActionBar>
    <StackLayout class="page__content">
        <ListPicker items="{{ pretraga }}" selectedIndex="0" loaded="onListPickerLoaded"  id="kategorije"/>
        <SearchBar class="" hint="Naš broj..." returnKeyType="done" autocorrect="false" autocapitalizationType="sentences" id="val" width="40%" style="text-align:center" />
        <Button text="TRAŽI" class="btn btn-primary btn-rounded-sm" style="width: 36%" id="btn"/>
        <Button text="&#xf002;" class="btn btn-primary fas fadein" style="width: 100%; margin-top: -20px; font-size: 35%; box-shadow: 0px 0px 0px transparent;" height="14%" id="show" />
        <!-- <HtmlView html="{{ rezultat }}" class="text-left" textWrap="true" loaded="onHtmlLoaded"/> -->
        <ActivityIndicator busy="true" id="busy" visibility="collapsed"></ActivityIndicator>
        <StackLayout class="hr m-10"></StackLayout>
        <Label class="page__content-icon fas" text="&#xf07c;" id="ikona" style="margin-top: 20px;"></Label>
        <ListView
            items="{{ rezultat }}"
            loaded="{{ onListViewLoaded }}"
            itemTap="onItemTap"
            loadMoreItems="onLoadMoreItems"
            separatorColor="#607d8b"
            rowHeight="auto"
            class="fadein list-group"
            id="listView"
            height= "50%"
            >
            <ListView.itemTemplate>
                <!-- The item template can only have a single root view container (e.g. GriLayout, StackLayout, etc.) -->
                <StackLayout class="list-group-item">
                    <Label text="{{ key || '...' }}" textWrap="false" class="list-group-item-heading"  style="font-weight: bold;"/>
                    <Label text="{{ data || '...' }}" textWrap="true" class="list-group-item-text"  style=""/>
                </StackLayout>
            </ListView.itemTemplate>
        </ListView>
    </StackLayout>
</Page>