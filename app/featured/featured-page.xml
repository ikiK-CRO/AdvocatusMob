<Page
    loaded="onPageLoaded" xmlns:lv="nativescript-ui-listview"
    navigatingTo="onNavigatingTo"
    xmlns="http://schemas.nativescript.org/tns.xsd">
    <ActionBar>
        <!--
        Use the NavigationButton as a side-drawer button in Android
        because ActionItems are shown on the right side of the ActionBar
        -->
        <NavigationButton ios:visibility="visible" tap="onDrawerButtonTap">
            <Label class="fas" text="&#xf0c9;"></Label>
        </NavigationButton>
        <!--
        Use the ActionItem for IOS with position set to left. Using the
        NavigationButton as a side-drawer button in iOS is not possible,
        because its function is to always navigate back in the application.
        -->
        <ActionItem
            android:visibility="visible"
            tap="onInfoTap"
            ios.position="right"
            android.position="actionBar"
            >
            <Label class="fas fa-3x" text="&#xf05a;" style="color: white;  font-size: 20%; padding-right: 40px" id="manuinfo"></Label>
        </ActionItem>
        <ActionItem
            android:visibility="visible"
            tap="onInboxTap"
            ios.position="right"
            >
            <Label class="fas fa-3x" text="&#xf01c;" style="color: white;  font-size: 20%; padding-right: 40px" id="manuinbox"></Label>
        </ActionItem>
        <ActionItem
            android:visibility="visible"
            tap="onDrawerButtonTap"
            ios.position="right">
            <Label class="fas  fa-3x" text="&#xf0c9;" style="color: white; font-size: 20%"></Label>
        </ActionItem>
        <!-- <Label style="color: white" text="AdvocatusMob - Naslovna"></Label> -->
        <StackLayout orientation="horizontal"
            ios:horizontalAlignment="center"
            android:horizontalAlignment="center"
            id="staction"
            >
            <Image src="~/img/logo.png" class="action-image" width="50" height="50" ios:style="margin-top: -50px" id="logoHome"></Image>
            <Label text="" class="action-label h2" color="white" ios:style="margin-top: -40px"></Label>
        </StackLayout>
    </ActionBar>
    <GridLayout class="page__content">
        <lv:RadListView items="{{ myObservableArray }}" class="list-group fadein" separatorColor="#607d8b" rowHeight="auto" height= "100%" id="listView"
            selectionBehavior="None" 
            itemSwipeProgressEnded="onSwipeCellFinished"
            itemSwipeProgressStarted="onSwipeCellStarted" 
            itemSwipeProgressChanged="onSwipeCellProgressChanged"
            itemSwiping="onItemSwiping" 
            swipeActions="true" pullToRefresh="true" pullToRefreshInitiated="{{onPullToRefreshInitiated}}" 
            itemTap="onItemTap">
            <lv:RadListView.listViewLayout>
                <lv:ListViewLinearLayout scrollDirection="Vertical" itemInsertAnimation="Fade" itemDeleteAnimation="Slide"/>
            </lv:RadListView.listViewLayout>
            <lv:RadListView.itemTemplate >
                <StackLayout orientation="vertical" class="list-group-item" style="margin: 0px; padding: 0px" >
                    <Label fontSize="10" text="{{ itemName || '...' }}" textWrap="true" id="{{ id }}" class="{{ procitan == 'ne' ? 'neprocitanaporuka' : 'procitanaporuka' }}" style="padding-top: 0px;padding-bottom: 10px; font-style: italic; " />
                    <Label fontSize="14" text="{{ itemDescription || '...'}}" textWrap="true" id="{{ id }}" class="{{ procitan == 'ne' ? 'neprocitanaporuka' : 'procitanaporuka' }}" style="padding-top: 0px;padding-bottom: 0px; background-color:white; border-color: black; border-width: 1px;  border-radius: 6px; margin-right: 20px; margin-left: 20px  " androidElevation="5"/>
                    <StackLayout class="hr m-0"></StackLayout>
                </StackLayout>
            </lv:RadListView.itemTemplate>
        </lv:RadListView>
    </GridLayout>
</Page>